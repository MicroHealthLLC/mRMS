<div class="col-xs-12 btn-edition tabs-section">
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
    <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:200px;">
      <% if @channel.can?(:delete_channel, :manage_channel, :manage_roles) and @channel.user_id == User.current.id %>
          <li>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <%= link_to('Delete', channel_path(@channel), class: 'dropdown-item',
                        :method => :delete,
                        :data => {:confirm => t(:text_are_you_sure)})
            %>
          </li>
          <div class='dropdown-item-dividier'></div>
      <% end %>

      <% if @channel.user_id == User.current.id %>
          <li>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <%= link_to 'Edit', edit_channel_path(@channel), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>
      <% end %>

      <% if @channel.user_id == User.current.id && !@channel.is_public? && !@channel.is_personal? %>
          <li>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <%= link_to 'Manage Users', manage_users_channel_path(@channel), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>
      <% end %>

      <% if @channel.can?(:edit_channel, :manage_channel, :manage_roles) %>
          <li>
            <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
            <%= link_to 'Add report', new_channel_report_url(@channel), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>
      <% end %>


      <li>
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        <%= link_to 'Cancel', channels_path, class: 'dropdown-item' %>
      </li>
      <div class='dropdown-item-dividier'></div>
    </ul>
  </div>
</div>
