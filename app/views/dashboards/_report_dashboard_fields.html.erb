<div class="nested-fields row margin-top-5">
  <div class="col-md-2 hidden-xs"></div>
  <div class="col-md-2">
    <%= f.label :report %>
  </div>

  <div class="col-md-6">

    <%= f.hidden_field :dashboard_id%>
    <%= f.select :pivot_table_id,
                 options_for_select(SavePivotTable.where(report_id: @report.id).pluck(:name, :id),
                                    selected: f.object.pivot_table_id), {}, {class: 'form-control'} %>
  </div>
  <div class="col-md-2">
    <%= link_to_remove_association  "<i class='far fa-trash-alt'></i>".html_safe , f, class: 'btn btn-danger' %>

  </div>
</div>
