<%#= error_messages_for '@enumeration' %>
<div class="row mx-auto">
  <div class="col-xs-12 col-md-8">
    <fieldset>
      <%=form_for :enumeration, object: @enumeration,
                  :url => (@enumeration.new_record? ? enumerations_path : enumeration_path(@enumeration)),
                  html: {method: (@enumeration.new_record? ? 'post' : 'put'), class: 'form-horizontal' } do |f| %>
          <%= f.hidden_field :type  %>
          <% if @enumeration.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@enumeration.errors.count, "error") %> prohibited this enumeration from being saved:</h2>

                <ul>
                  <% @enumeration.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group mx-auto">
            <%= f.label t(:label_name) %>
            <%= f.text_field :name , class: 'form-control', placeholder: 'Type Name' %>
          </div>

          <div class="form-group mx-auto">
            <label class="checkbox pl-sm-0">
              <%= f.check_box :active %>
              <span class="d-inline-flex"></span><post class="font-weight-normal ml-3"><%= t(:label_active) %></post>
            </label>
          </div>

          <div class="form-group mx-auto">
            <label class="checkbox pl-sm-0">
              <%= f.check_box :is_flagged %>
              <span class="d-inline-flex"></span><post class="font-weight-normal ml-3"><%= t(:label_flagged) %></post>
            </label>
          </div>

          <div class="form-group mx-auto">
            <label class="checkbox pl-sm-0">
              <%= f.check_box :is_closed %>
              <span class="d-inline-flex"></span><post class="font-weight-normal ml-3"><%= t(:label_closed) %></post>
            </label>
          </div>

          <div class="form-group mx-auto">
            <label class="checkbox pl-sm-0">
              <%= f.check_box :is_default %>
              <span class="d-inline-flex"></span><post class="font-weight-normal ml-3"><%= t(:label_default) %></post>
            </label>
          </div>

          <div class="form-group mx-auto" >
            <div class="col-md-11">
              <%= link_to t('button_cancel'), enumerations_path, class: 'btn btn-warning pull-right' %>
              <%= f.submit t(:button_save), class: 'btn btn-success pull-right' %>
            </div>
          </div>
      <% end %>
    </fieldset>
  </div>
</div>
