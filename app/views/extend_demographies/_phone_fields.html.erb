<div class="nested-fields row ">
  <fieldset>

    <div class="col-md-12">
      <div class="form-group col-md-12">
        <%= f.label t('label_phone_type'), class: 'col-md-2 control-label' %>
        <div class="col-md-8">
          <%= f.select :phone_type_id, options_for_select(PhoneType.active.pluck(:name, :id), selected: f.object.phone_type.try(:id) ), {},{ class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group col-md-12">
        <%= f.label t('phone'), class: 'col-md-2 control-label' %>
        <div class="col-md-8">
          <%= f.text_field :phone_number,  class: 'form-control' %>
        </div>
      </div>

      <div class="form-group col-md-12">
        <%= f.label t('label_note'), class: 'col-md-2 control-label' %>
        <div class="col-md-8">
          <%= f.text_area :note, class: 'form-control' %>
        </div>
      </div>
    </div>
  </fieldset>
</div>
