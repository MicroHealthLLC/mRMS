<div class="responsivePlotly" style="padding-inline:20px;">
  <div style="margin-top: 10px; font-size: 18px">
    <%= link_to pivot_table.name, channel_report_path(@channel, pivot_table.report , query_id: pivot_table.id) %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 px-5" style="margin-bottom: 40px;" >
      <div class="diagramWrapper" style="margin-top: 25px;">
        <div id="output_<%= pivot_table.id %>" class="pane" style="<%= "transform: scale(1);" if params[:controller] == 'multi_data_set_dashboards' %>"></div>
      </div>
      <span class="changesOutput_<%= pivot_table.id %>" ></span>
    </div>
  </div>

  <style>
    .pvtAxisContainer { overflow: auto; } /*for IE11 and jQuery draggable scroll offset workaround*/
    .pvtHorizList li { float: left; }
    table.pvtTable tr th, table.pvtTable tr th {
      font-size: 9pt;
    }
    .c3 text {font-family:Verdana, sans-serif;}
    .c3 text {font-size: 12px;}
    .c3-line {stroke-width: 3px;}
    #url        { font-size: 11px;
      color: #767676;
      border: 1px solid #ccc;
      margin: 0px 2px 0px 2px;
      display: none; }
    #show-url   { font-size: 9px; }
    #clear-all  { float: right; cursor: pointer; margin-top: -15px; }
    #output_<%= pivot_table.id %>     { margin-top: -15px; }
  </style>

  <script type="text/javascript">
      (function() {
        var uri = 'data:application/vnd.ms-excel;base64,'
            , template = '<html xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:x="urn:schemas-microsoft-com:office:excel" xmlns="http://www.w3.org/TR/REC-html40"><head><!--[if gte mso 9]><xml><x:ExcelWorkbook><x:ExcelWorksheets><x:ExcelWorksheet><x:Name>{worksheet}</x:Name><x:WorksheetOptions><x:DisplayGridlines/></x:WorksheetOptions></x:ExcelWorksheet></x:ExcelWorksheets></x:ExcelWorkbook></xml><![endif]--><meta http-equiv="content-type" content="text/plain; charset=UTF-8"/></head><body><table>{table}</table></body></html>'
            , base64 = function(s) { return window.btoa(unescape(encodeURIComponent(s))) }
            , format = function(s, c) { return s.replace(/{(\w+)}/g, function(m, p) { return c[p]; }) }
        return function(table, name) {
            if (!table.nodeType) table = document.getElementById(table)
            var ctx = {worksheet: name || 'Worksheet', table: table.innerHTML}
            window.location.href = uri + base64(format(template, ctx))
        }
      })()

      var renderers;
      $(document).ready(function(){
          var derivers = $.pivotUtilities.derivers;
          var dataClass = $.pivotUtilities.SubtotalPivotData;
          renderers = $.extend({},
            $.pivotUtilities.renderers,
            $.pivotUtilities.c3_renderers,
            $.pivotUtilities.subtotal_renderers,
            $.pivotUtilities.plotly_renderers
          );
          default_query = {
              dataClass: dataClass,
              renderers: renderers,
              unusedAttrsVertical: false,
              rows: [],
              cols: [],
              rendererName: "Table",
              rendererOptions: {
                  c3: {
                      size: { width: window.innerWidth / 1.4 * 0.8 }
                  },
                  rowSubtotalDisplay: {
                      hideOnExpand: true
                  },
                  colSubtotalDisplay: {
                      hideOnExpand: true
                  },
                  plotly: {width: '48%', height: '90%'}
              }
          }
          <% header, tab, error = render_pivot_information(pivot_table.report.document.file) %>
          <% if error %>
            alert('<%=  error %> ');
          <%  else   %>
            var json = <%= tab.to_json.to_s.gsub('/', '\/').html_safe %>
          <% end %>

          query_content = <%= JSON.parse(SavePivotTable.find_by_id(pivot_table.id).content).to_json.html_safe %>
          if(query_content)
          {
            $("#output_<%= pivot_table.id %>").pivotUI(json, Object.assign(default_query,query_content));
          }
          else
          {
            $("#output_<%= pivot_table.id %>").pivotUI(json, default_query);
          }
          setTimeout(function(){
            $("#output_<%= pivot_table.id %>").find('tr:first').remove();
            $("#output_<%= pivot_table.id %>").find('tr:first').remove();
            $("#output_<%= pivot_table.id %>").find('.pvtAxisContainer').remove();
            $(".modebar-container").addClass('position-relative');
            $(".modebar.modebar--hover.ease-bg").addClass("d-flex flex-wrap w-100 position-relative");
            $(".modebar").each(function(){
              $(this).css("left", "30%");
            });
          }, 100)
      });
  </script>
</div>


