
<div class="card card-custom gutter-b news-article">
  <div class="card-header">
    <div class="card-title">
      <%= avatar(news.user) %>
      <h3 class="card-label mx-0">
        <%= link_to h(news.title), news_path(news), class: 'd-block' %>
        <small style="font-size: 65%"><%= authoring news.created_at, news.user %></small>
      </h3>
    </div>
  </div>
  <div class="card-body wiki">
    <%= news.summary.html_safe %>
  </div>
</div>
