<div class="module-title">
  <h2 class="module-title-text">ONE DRIVES</h2>
</div>

<section id="widget-grid" class="news_section">
  <% if @drives.present? %>
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <% @drives.each do |drive| %>
          <%= render partial: 'one_drive', locals: {drive: drive} %>
        <% end %>
      </article>
    </div>
  <% elsif current_user.onedrive_access_token.present? %>
    <div class="row" style="margin-bottom: 10px">
      <h4 class="col-md-12 pt-10 text-align-center">
        One Drive Documents folder do not have any related file with following extensions('csv', 'xls', 'xlsx')
      </h4>
    </div>
  <% else %>
    <div class="row" style="margin-bottom: 10px">
      <div class="col-md-12">
        <div class="pull-right">
          <%= show_button(connect_with_onedrive_url, "Connect with One Drive", "plus", "primary") %>
        </div>
      </div>
    </div>
  <% end %>
</section>
