<% dashboards = @report.dashboards %>
<% if dashboards.present? %>
  <% dashboards.each do |dashboard| %>
    <div style="width: 260px; height: 300px; position: relative; float: left; display: inline-block; margin: 10px;
    padding: 15px; border: 1px #f9dcd4 solid;  border-radius: 7px">
      <%= link_to  [@channel, @report, dashboard]  do %>
        <%= image_tag "dashboard.png", size: '220x220' %>
      <% end %>
      <div class="text-center">
        <% report_count = dashboard.save_pivot_tables.count%>
        <p>Total Reports: <%= report_count.to_s %></p>
        <h2 style=" width: 100%;  align-content: center; text-align: center; position: absolute; bottom: 0px; left: 0;">
           <%= dashboard.name  %>
        </h2>
      </div>
      <div class="float-right">
        <%= link_to('<i class="fa fa-times"></i>'.html_safe, channel_report_dashboard_path(@channel, @report, dashboard),
          method: :delete, data: {confirm: "Are you sure to delete this dashboard?"}, style: "position: absolute; top: 0; color: #9e2b2b;") if (dashboard.user_id == User.current.id) or User.current.admin?  %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-custom alert-notice alert-light-primary show d-flex" role="alert">
    <div class="alert-icon"><i class="fas fa-exclamation-triangle"></i></div>
    <div class="alert-text">No Dashboard to display!</div>
  </div>
<% end %>
