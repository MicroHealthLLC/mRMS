<div style="width: 260px; height: 300px; position: relative; float: left; display: inline-block; margin: 10px;
    padding: 15px; border: 1px #e5f0f9 solid;  border-radius: 7px">
  <%= link_to channel_report_path(@channel, @report, query_id: pivot_table.id) do %>

      <% if (name = JSON.parse(pivot_table.content)['rendererName'].downcase) && name.include?('table') %>
          <%= image_tag "pivot/table.png", size: '220x220'%>
      <% elsif (name = JSON.parse(pivot_table.content)['rendererName'].downcase) && name.include?('heatmap') %>
          <%= image_tag "pivot/heatmap.png", size: '220x220'%>
      <% else %>
          <%= image_tag "pivot/#{name.gsub(' ', '-')}.png" , size: '220x220'%>
      <% end %>
  <% end %>
  <h2 class="text-truncate cursor-pointer" title="<%= pivot_table.name %>" style=" width: 100%;  align-content: center; text-align: center; position: absolute; bottom: 0px; left: 0; font-size: 21px">
    <%= pivot_table.name.truncate(20)  %>
  </h2>
  <%= link_to( '<i class="fa fa-times"></i>'.html_safe, delete_pivottable_channel_report_path(@channel, @report, query_id: pivot_table.id),
               :method => :delete,
               :data => {:confirm => "Are you sure to delete this report?"}, style: "position: absolute; top: 0; float: right;color: #9e2b2b;") if (pivot_table.user_id == User.current.id) or User.current.admin?  %>

</div>
