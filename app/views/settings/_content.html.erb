<%= form_for(@setting, url: set_content_settings_path, html: { method: 'post',  class: 'form-horizontal' }) do |f| %>

  <div class="row mx-auto">
    <div class="col-md-12">
      <h2>Header Section</h2>
      <%= text_area_tag :header_section, Setting['header_section'], name: 'header_section', id: 'ckEditorFileManager'%>
    </div>
  </div>

  <div class="row mx-auto">
    <div class="col-md-12">
      <h2>Section 1</h2>
      <%= text_area_tag :section_1, Setting['section_1'], id: 'ckEditorFileManager1'%>
    </div>
  </div>

  <div class="row mx-auto">
    <div class="col-md-12">
      <h2>Section 2</h2>
      <%= text_area_tag :section_2, Setting['section_2'], id: 'ckEditorFileManager2' %>
    </div>
  </div>

  <div class="row mx-auto">
    <div class="col-md-12">
      <h2>Section 3</h2>
      <%= text_area_tag :section_3, Setting['section_3'], id: 'ckEditorFileManager3' %>
    </div>
  </div>

  <div class="row mx-auto">
    <div class="col-md-12">
      <h2>Section 4</h2>
      <%= text_area_tag :section_4, Setting['section_4'], id: 'ckEditorFileManager4' %>
    </div>
  </div>

  <div class="form-group margin-top-10" >
    <div class="col-xs-12">
      <%= f.submit t('button_save'), class: 'btn btn-success pull-right' %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $("#ckEditorFileManager,#ckEditorFileManager1,#ckEditorFileManager3,#ckEditorFileManager4").each(function(){
    CKEDITOR.replace(this,{
      height: 300,
      filebrowserUploadUrl: '/file_uploads',
      filebrowserImageUploadUrl: '/file_uploads'
    });
  });
</script>
