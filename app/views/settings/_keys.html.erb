<%= form_tag(set_key_providers_settings_path, method: 'post',  class: 'form-horizontal' ) do |f| %>
    <% ['OFFICE365', 'GOOGLE', 'FACEBOOK', 'GITHUB', 'TWITTER', 'AZURE'].each do |provider| %>
        <fieldset>
          <legend><%= provider %> </legend>
          <div class="form-group">
            <%= label_tag provider.downcase, "#{provider} KEY", class: 'col-md-2 control-label', title: provider %>
            <div class="col-md-9">
              <%= text_field_tag "#{provider.downcase}[key]", Setting["#{provider}_KEY"] , {class: 'form-control'} %>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag provider.downcase, "#{provider} SECRET", class: 'col-md-2 control-label', title: provider %>
            <div class="col-md-9">
              <%= text_field_tag "#{provider.downcase}[secret]", Setting["#{provider}_SECRET"] , {class: 'form-control'} %>
            </div>
          </div>
        </fieldset>
    <% end %>

    <fieldset>
      <legend> CALLBACK URL </legend>
      <div class="form-group">
        <%= label_tag "callback_url", "CALLBACK URL", class: 'col-md-2 control-label', title: "CALLBACK URL" %>
        <div class="col-md-9">
          <%= text_field_tag "callback_url", Setting["CALLBACK_URL"] , {class: 'form-control'} %>
        </div>
      </div>
    </fieldset>

    <div class="form-group margin-top-10" >
      <div class="col-xs-12">
        <%= submit_tag t('button_save'), class: 'btn btn-success pull-right' %>
      </div>
    </div>

<% end %>
