<table class="table table-separate table-head-custom" id="users_deleted">
  <thead>
  <tr>
    <th><%= t :login %></th>
    <th><%= t :email %></th>
    <th> <%= t('profile.first_name') %> </th>

    <th> <%= t('profile.middle_name') %> </th>
    <th> <%= t('profile.last_name') %> </th>
    <th> <%= t('status') %> </th>
    <th><%= 'Delete'%></th>
  </tr>
  </thead>

  <tbody>
  <% users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>

      <td><%= user.middle_name %></td>
      <td><%= user.last_name %></td>

      <td><%= user.deleted? %></td>
      <td><%= link_to 'Delete', really_destroy_user_path(user.id), method: :delete, data: {confirm: t(:permanently_delete)} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('users_deleted')
  })
</script>
