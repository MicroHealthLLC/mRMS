<% if dashboards.present? %>
  <div class="row" id="<%= display_more_dashboard %>">
    <% dashboards.each do |dashboard| %>
      <div class="card m-2 p-2 cursor-pointer" style="width: 18rem">
        <div class="text-center h-100">
          <div class="card-body pt-0 pb-2">
            <%= link_to [dashboard.report.channel, dashboard.report , dashboard ] do%>
              <%= image_tag "dashboard.png", style: 'width: 13rem' %>
            <% end %>
            <div class="cursor-pointer text-center pb-3">
              <div title="<%= dashboard.name %>" class="text-black-50 px-3 mb-0 mt-2">
                <%= dashboard.name %>
              </div>
              <div class="row">
                <b class="col-5  p-0">Data Set:</b>
                <p class="text-black-50 col-7 text-align-left data_title text-truncate w-100 p-0" title="<%= dashboard.report.name %>"> <%= dashboard.report.name.truncate(25) %> </p>
              </div>
              <div class="row ">
                <b class="col-5 p-0">Channel:</b>
                <p class="col-7 text-black-50 text-align-left data_title p-0" title="<%= dashboard.report.channel.name %>"> <%= dashboard.report.channel.name.truncate(25) %> </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-md-12 py-2 pb-5">
      <% if dashboard_count > 3 && dashboards.count == 3 %>
        <%= link_to 'Show More...', welcome_index_path(display_more: display_more_dashboard), remote: true, class: 'pull-right' %>
      <% elsif dashboards.count > 3 %>
        <%= link_to 'Show less...', welcome_index_path(display_less: display_more_dashboard), remote: true, class: 'pull-right' %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="col-md-12">
    <div class="alert alert-custom alert-notice alert-light-primary show d-flex" role="alert">
      <div class="alert-icon"><i class="fas fa-exclamation-triangle"></i></div>
      <div class="alert-text">No Dashboard to display!</div>
    </div>
  </div>
<% end %>
