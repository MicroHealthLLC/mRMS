<div class="card m-2 p-2 cursor-pointer" style="width: 18rem;">
  <div class="text-center">
    <%= link_to channel_report_path(report.channel, report) do %>
      <% name = JSON.parse(report&.save_pivot_tables&.first&.content)["rendererName"].downcase rescue nil %>
      <% if (name && name.include?('table')) %>
          <%= image_tag "pivot/table.png", style: 'width: 13rem'%>
      <% elsif (name && name.include?('heatmap')) %>
          <%= image_tag "pivot/heatmap.png", style: 'width: 13rem'%>
      <% elsif name%>
          <%= image_tag "pivot/#{name.gsub(' ', '-')}.png" , style: 'width: 13rem'%>
      <% else %>
        <%= image_tag "dashboard.png", style: 'width: 13rem'%>
      <% end %>
    <% end %>
  </div>
  <div class="text-center pb-3">
    <div class="row pt-3">
      <b class="col-5 text-align-right">Data Set:</b>
      <p class="col-7 text-align-left data_title text-truncate w-100" title="<%= report.name %>"> <%= report.name.truncate(25) %> </p>
    </div>
    <div class="row">
      <b class="col-5 text-align-right">Channel:</b>
      <p class="col-7 text-align-left data_title" title="<%= report.channel.name %>"> <%= report.channel.name.truncate(25) %> </p>
    </div>
  </div>
</div>
