<div class="col-md-12">
  <h2><b>Public Reports</b></h2>
</div>
<% if @public_reports.present? %>
  <div class="row">
    <% @public_reports.each do |pivot_table| %>
      <%= render partial: 'report_content' , locals: { pivot_table: pivot_table  }  %>
    <% end %>
  </div>
  <div class="col-md-12 py-2">
    <% if @public_reports_count > 3 && @public_reports.count == 3 %>
      <%= link_to 'Show More...', welcome_index_path(display_all_public: true), remote: true , class: 'pull-right' %>
    <% elsif @public_reports.count > 3 %>
      <%= link_to 'Show Less...', root_path, remote: true, class: 'pull-right' %>
    <% end %>
  </div>
<% else %>
  <div class="col-md-12">
    <div class="alert alert-custom alert-notice alert-light-primary show d-flex" role="alert">
      <div class="alert-icon"><i class="fas fa-exclamation-triangle"></i></div>
      <div class="alert-text">No Public Report to display!</div>
    </div>
  </div>
<% end %>

