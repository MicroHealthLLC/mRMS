<div class="col-md-12">
  <h2><b>Public Reports</b></h2>
</div>
<% @public_reports.each do |report| %>
  <div class="col-md-4 my-3">
    <%= render partial: 'report_content' , locals: { report: report  }  %>
  </div>
<% end %>
<div class="col-md-12 py-2">
  <% if @public_reports.count == 3 %>
    <%= link_to 'Show More...', welcome_index_path(display_all_public: true), remote: true , class: 'pull-right' %>
  <% elsif @public_reports.count > 3 %>
    <%= link_to 'Show Less...', root_path, remote: true, class: 'pull-right' %>
  <% end %>
</div>

