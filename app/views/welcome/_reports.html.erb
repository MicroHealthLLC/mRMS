<div id="widget-grid">
  <div class="row">
    <div class="col-md-12 px-0">
      <h1 class="font-weight-bold">Reports</h1>
    </div>
    <div class="col-md-12 px-0">
      <section class="public_reports">
        <div class="row mb-5">
          <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= render  partial: 'report_content',
                        layout: 'shared/smart_widget_wrapper',
                        locals: {
                          wid_id: 'public_reports',
                          wid_title: 'Public Reports',
                          reports: @public_reports,
                          report_count: @public_reports_count,
                          display_more_report: 'display_all_public'
                        } %>
          </article>
        </div>
      </section>
      <section class="personal_reports">
        <div class="row mb-5">
          <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= render  partial: 'report_content',
                        layout: 'shared/smart_widget_wrapper',
                        locals: {
                          wid_id: 'personal_reports',
                          wid_title: 'Personal Reports',
                          reports: @personal_reports,
                          report_count: @personal_dashboard_count,
                          display_more_report: 'display_all_personal'
                        } %>
          </article>
        </div>
      </section>
      <section class="group_reports">
        <div class="row mb-5">
          <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= render  partial: 'report_content',
                        layout: 'shared/smart_widget_wrapper',
                        locals: {
                          wid_id: 'group_reports',
                          wid_title: 'Group Reports',
                          reports: @group_reports,
                          report_count: @group_reports_count,
                          display_more_report: 'display_all_group'
                        } %>
          </article>
        </div>
      </section>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 px-0">
      <h1 class="font-weight-bold">Dashboards</h1>
    </div>
    <div class="col-md-12 px-0">
      <section class="public_dashboard">
        <div class="row mb-5">
          <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= render  partial: 'dashboard_content',
                        layout: 'shared/smart_widget_wrapper',
                        locals: {
                          wid_id: 'public_dashboard',
                          wid_title: 'Public Dashboard',
                          dashboards: @public_dashboard,
                          dashboard_count: @public_dashboard_count,
                          display_more_dashboard: 'display_all_public_dashboard'
                        } %>
          </article>
        </div>
      </section>
      <section class="personal_dashboard">
        <div class="row mb-5">
          <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= render  partial: 'dashboard_content',
                        layout: 'shared/smart_widget_wrapper',
                        locals: {
                          wid_id: 'personal_dashboard',
                          wid_title: 'Personal Dashboard',
                          dashboards: @personal_dashboard,
                          dashboard_count: @personal_dashboard_count,
                          display_more_dashboard: 'display_all_personal_dashboard'
                        } %>
          </article>
        </div>
      </section>
      <section class="group_dashboard">
        <div class="row mb-5">
          <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= render  partial: 'dashboard_content',
                        layout: 'shared/smart_widget_wrapper',
                        locals: {
                          wid_id: 'group_dashboard',
                          wid_title: 'Group Dashboard',
                          dashboards: @group_dashboard,
                          dashboard_count: @group_reports_count,
                          display_more_dashboard: 'group_dashboard_count'
                        } %>
          </article>
        </div>
      </section>
    </div>
  </div>
</div>
